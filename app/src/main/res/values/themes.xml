<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FooChat" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorPrimaryVariant">@color/primary_800</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_900</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="colorSecondaryVariant">@color/secondary_700</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">?attr/colorSurface</item>
    </style>
</resources>